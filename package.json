  "engines": {
    "vscode": "^1.42.0"
  },
  "scripts": {
    "clean": "rimraf -rf out *.vsix",
    "esbuild:ext": "esbuild ./src/extension.ts --bundle --external:vscode --platform=node --tsconfig=./tsconfig.json --log-level=info --color=true --format=cjs --target=es2017 --minify --outfile=./out/extension.js",
    "esbuild:ls": "esbuild ./src/ls/plugin.ts --bundle --external:vscode --platform=node --tsconfig=./tsconfig.json --log-level=info --color=true --format=cjs --target=es2017 --minify --outfile=./out/ls/plugin.js",
    "esbuild": "npm run esbuild:ext && npm run esbuild:ls",
    "prepackage": "npm run clean && npm run esbuild",
    "package": "vsce package --no-yarn --allow-star-activation -o .",
    "publish:vsce": "vsce publish --no-yarn --allow-star-activation -p $VSCE_PAT -i",
    "publish:ovsx": "ovsx publish -p $OVSX_PAT"
  },
  "keywords": [
    "clickhouse",
    "sqltools-driver"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "extensionDependencies": [
    "mtxr.sqltools"
  ],
  "activationEvents": [
    "*",
    "onLanguage:sql",
    "onCommand:sqltools.*"
  ],
  "main": "./out/extension.js",
  "dependencies": {
    "@apla/clickhouse": "^1.6.4",
    "@sqltools/base-driver": "latest",
    "@sqltools/types": "latest",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/node": "^17.0.25",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.42.0",
    "esbuild": "^0.14.38",
    "ovsx": "^0.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vsce": "^2.7.0"
  }
}
