{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "title": "Server",
      "type": "string",
      "default": "http://localhost:8123",
      "minLength": 1
    },
    "database": {
      "title": "Database",
      "type": "string",
      "default": "default",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "default": "default",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "default": "",
      "minLength": 1
    }
  },
  "required": ["host", "database"]
}
