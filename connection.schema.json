{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "server": {
      "title": "Server",
      "type": "string",
      "default": "localhost",
      "minLength": 1
    },
    "port": {
      "title": "Port",
      "type": "integer",
      "default": 8123
    },
    "useHTTPS": {
      "title": "Use HTTPS",
      "type": "boolean",
      "default": false
    },
    "database": {
      "title": "Database",
      "type": "string",
      "default": "default"
    },
    "username": {
      "title": "Username",
      "type": "string",
      "default": "default"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "default": ""
    }
  },
  "required": ["server"]
}
